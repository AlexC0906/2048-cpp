{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build project",
            "type": "shell",
        "command": "taskkill /F /IM main.exe >nul 2>&1 & del main.exe >nul 2>&1 & g++ -g src/main.cpp src/game.cpp -o main.exe",
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": ["/C"]
            }
        },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
